actor FloraBriscoletti : DoomPlayer // PlayerPawn
{
  +NOSKIN
  +NOTHRUSTWHENINVUL
  Speed 1
  Health 73 // 61-85
  Player.MaxHealth 73
  Player.MugShotMaxHealth -1 // 73
  Radius 13 // 13
  Height 50 // 50
  Scale 0.34512 // 0.37594
