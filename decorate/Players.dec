  DamageFactor "Normal", 1.333 // 75% the physical defense of a normal player.
  DamageFactor "Magic", 0.598 // 166.7% the magical defense of a normal player
  DamageFactor "Fire", 0.900 // 111.1% the fire-elemental defense of a normal player
  DamageFactor "Ice", 0.950 // 105.2% the ice-elemental defense of a normal player
  DamageFactor "Thunder", 0.975 // 102.5% the thunder-elemental defense of a normal player
  DamageFactor "Wind", 1.0
  DamageFactor "Holy", -1.0
  DamageFactor "Crush", 16
  Player.ColorRange 0, 0
  Player.Portrait "NERPORT2"
  Player.StartItem "SceptreOfEmpyrea"
  Player.StartItem "FistFlora"
  Player.WeaponSlot 1, SceptreOfEmpyrea, SauronGauntletsFlora, FistFlora, FistInvisible // Melee Weapons
//  Player.WeaponSlot 2, Pistol2, DualPistols // Pistols
  Player.WeaponSlot 3, DiarisLongbow //, MagicBoomerang // Magicial Weapons
  Player.WeaponSlot 4, ImpClaw, DarkImpClaw, CacodemonEye, CacolanternEye, AbaddonEye // Hellcore Class 1
  Player.WeaponSlot 5, KnightFist, BaronFist, BelphegorFist, BruiserFist, ArchonFist, PyroFist // Hellcore Class 2
  Player.WeaponSlot 6, IncarnateSkull, ArchvileHand, DiabloistHand, BalrogFist // Hellcore Class 3
  Player.ViewHeight 36
  Player.JumpZ 9
  Player.ForwardMove 1.075, 1.15
  Player.SideMove 1.075, 1.15
  Player.InvulnerabilityMode "Reflective"
  Player.DisplayName "Flora Briscoletti"
  Player.Face FLO
  Player.CrouchSprite TNT1
  Player.SoundClass "FloraSND"

  States
  {
  HPFlashGravity:
    NERA A 0 ACS_ExecuteAlways(858,0,0,0,0)
    Goto Spawn
  ManaFlashGravity:
    NERA A 0 ACS_ExecuteAlways(858,0,1,0,0)
    Goto Spawn  
  InvulnFlashGravity:
    NERA A 0 ACS_ExecuteAlways(858,0,2,0,0)
    Goto Spawn  
  HPManaFlashGravity:
    NERA A 0 ACS_ExecuteAlways(858,0,3,0,0)
    Goto Spawn  
  Spawn:
    NERA A 0
    NERA A -1
    Loop
  See:
    NERA AAAA 4 // ABCD 4
    Loop
  Missile:
    NERA A 12 // E 12
    Goto Spawn
  Melee:
    NERA A 6 BRIGHT // F 6 BRIGHT
    Goto Missile
  Pain:
    NERA A 0 ACS_ExecuteAlways(847,0,1,0,0)
    NERA A 4 // G 4
    NERA A 4 A_Pain // G 4 A_Pain
    Goto Spawn
  Death:
    TNT1 A 0 A_PlayerSkinCheck("AltSkinDeath") // H 0 A_PlayerSkinCheck("AltSkinDeath")
  Death1:
    TNT1 A 10 // H 10 
    TNT1 A 10 A_PlayerScream // I 10 A_PlayerScream
    TNT1 A 10 A_NoBlocking // J 10 A_NoBlocking
    TNT1 AAA 10 // KLM 10
    TNT1 A -1 // N -1
    Stop
  XDeath:
    TNT1 A 0 A_PlayerSkinCheck("AltSkinDeath") // O 0 A_PlayerSkinCheck("AltSkinXDeath")
  XDeath1:
    TNT1 A 5 // O 5 
    TNT1 A 0 A_PlayerSkinCheck("AltSkinXDeath") // P 0 A_PlayerSkinCheck("AltSkinXDeath")
    TNT1 A 5 A_XScream // P 5 A_XScream
    TNT1 A 0 A_PlayerSkinCheck("AltSkinXDeath") // Q 0 A_PlayerSkinCheck("AltSkinXDeath")
    TNT1 A 5 A_NoBlocking // Q 5 A_NoBlocking
    TNT1 AAAAA 5 // RSTUV 5
    TNT1 A -1 // W -1
    Stop
  AltSkinDeath:
    TNT1 A 6 // H 6
    TNT1 A 6 A_PlayerScream // I 6 A_PlayerScream
    TNT1 AA 6 // JK 6
    TNT1 A 6 A_NoBlocking // L 6 A_NoBlocking
    TNT1 AAA 6 // MNO 6
    TNT1 A -1 // P -1
    Stop
  AltSkinXDeath:
    TNT1 A 5 A_PlayerScream // Q 5 A_PlayerScream
    TNT1 A 0 A_NoBlocking // R 0 A_NoBlocking
    TNT1 A 5 A_SkullPop // R 5 A_SkullPop
    TNT1 AAAA 5 // STUV 5
    TNT1 A -1 // W -1
    Stop
 }
}

